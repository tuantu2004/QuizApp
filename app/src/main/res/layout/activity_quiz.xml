<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Header Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Progress Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Question 1/10"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp"/>

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:max="10"
                            android:progress="1"
                            android:progressTint="#6B5FB5"
                            android:progressBackgroundTint="#E0E0E0"/>
                    </LinearLayout>

                    <!-- Timer -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/timer_background"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_timer"
                            android:layout_marginBottom="4dp"
                            app:tint="#FF6B6B" />

                        <TextView
                            android:id="@+id/tvTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:30"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FF6B6B"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Score Display -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/cardHeader"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star"
                        android:tint="#FFD700"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/tvScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score: 0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Question Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/cardScore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Question Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp"/>

                    <!-- Question Text -->
                    <TextView
                        android:id="@+id/tvQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What is the capital of France?"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Options Container -->
            <LinearLayout
                android:id="@+id/optionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/cardQuestion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Option A -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOptionA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="12dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:text="A"
                            android:gravity="center"
                            android:background="@drawable/option_label_background"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvOptionA"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Paris"
                            android:textSize="16sp"
                            android:textColor="#333333"/>

                        <ImageView
                            android:id="@+id/ivCheckA"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_check"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Option B -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOptionB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="12dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:text="B"
                            android:gravity="center"
                            android:background="@drawable/option_label_background"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvOptionB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="London"
                            android:textSize="16sp"
                            android:textColor="#333333"/>

                        <ImageView
                            android:id="@+id/ivCheckB"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_check"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Option C -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOptionC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="12dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:text="C"
                            android:gravity="center"
                            android:background="@drawable/option_label_background"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvOptionC"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Berlin"
                            android:textSize="16sp"
                            android:textColor="#333333"/>

                        <ImageView
                            android:id="@+id/ivCheckC"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_check"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Option D -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOptionD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="12dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:text="D"
                            android:gravity="center"
                            android:background="@drawable/option_label_background"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvOptionD"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Madrid"
                            android:textSize="16sp"
                            android:textColor="#333333"/>

                        <ImageView
                            android:id="@+id/ivCheckD"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_check"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Next Button -->
            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Next Question"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/login_button_gradient"
                android:textAllCaps="false"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:enabled="false"
                android:alpha="0.5"
                app:layout_constraintTop_toBottomOf="@id/optionsContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>