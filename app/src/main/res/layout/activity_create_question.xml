<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_add"
                    android:tint="@android:color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Create Question"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- Main Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/headerLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Question Type Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question Type"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spType"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/spinner_background"
                        android:padding="16dp"
                        android:layout_marginBottom="20dp"/>

                    <!-- Question Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your question here"
                        app:boxStrokeColor="#6B5FB5"
                        app:hintTextColor="#6B5FB5"
                        android:layout_marginBottom="20dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etQuestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="100dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Options Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Answer Options"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"/>

                    <!-- Option A -->
                    <LinearLayout
                        android:id="@+id/layoutOptionA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="A"
                            android:gravity="center"
                            android:background="@drawable/option_label_background"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginEnd="12dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Option A"
                            app:boxStrokeColor="#6B5FB5"
                            app:hintTextColor="#6B5FB5">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etA"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textSize="14sp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Option B -->
                    <LinearLayout
                        android:id="@+id/layoutOptionB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="B"
                            android:gravity="center"
                            android:background="@drawable/option_label_background"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginEnd="12dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Option B"
                            app:boxStrokeColor="#6B5FB5"
                            app:hintTextColor="#6B5FB5">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textSize="14sp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Option C -->
                    <LinearLayout
                        android:id="@+id/layoutOptionC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="C"
                            android:gravity="center"
                            android:background="@drawable/option_label_background"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginEnd="12dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Option C"
                            app:boxStrokeColor="#6B5FB5"
                            app:hintTextColor="#6B5FB5">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textSize="14sp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Option D -->
                    <LinearLayout
                        android:id="@+id/layoutOptionD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="D"
                            android:gravity="center"
                            android:background="@drawable/option_label_background"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginEnd="12dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Option D"
                            app:boxStrokeColor="#6B5FB5"
                            app:hintTextColor="#6B5FB5">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textSize="14sp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Correct Answer Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Correct Answer"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"/>

                    <!-- RadioGroup for MCQ (A, B, C, D) -->
                    <RadioGroup
                        android:id="@+id/rgCorrectMCQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RadioButton
                            android:id="@+id/rbCorrectA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A - Correct Answer"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:buttonTint="#6B5FB5"/>

                        <RadioButton
                            android:id="@+id/rbCorrectB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="B - Correct Answer"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:buttonTint="#6B5FB5"/>

                        <RadioButton
                            android:id="@+id/rbCorrectC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="C - Correct Answer"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:buttonTint="#6B5FB5"/>

                        <RadioButton
                            android:id="@+id/rbCorrectD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="D - Correct Answer"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:buttonTint="#6B5FB5"/>
                    </RadioGroup>

                    <!-- RadioGroup for True/False -->
                    <RadioGroup
                        android:id="@+id/rgCorrectTF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/rbTrue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="True"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:buttonTint="#6B5FB5"/>

                        <RadioButton
                            android:id="@+id/rbFalse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="False"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:buttonTint="#6B5FB5"/>
                    </RadioGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/cardMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Save Button -->
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Save Question"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/login_button_gradient"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_save"
                    android:drawablePadding="8dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Cancel Button -->
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Cancel"
                    android:textColor="#6B5FB5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/outline_button_background"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_close"
                    android:drawablePadding="8dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>